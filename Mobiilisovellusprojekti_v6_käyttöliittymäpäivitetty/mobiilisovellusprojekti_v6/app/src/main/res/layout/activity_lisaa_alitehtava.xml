<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LisaaAlitehtava"
    android:background="@android:color/background_light">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="MobileManager"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:textSize="30dp"
            android:background="#8BC34A"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <EditText
            android:id="@+id/SubTaskNameEditor"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Lisää tehtävän nimi"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <EditText
            android:hint="Lisää kuvaus"
            android:id="@+id/taskDescription"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text=""
            android:gravity="top"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <Button
                android:id="@+id/returnButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PALAA"
                android:layout_marginRight="120dp"/>
            <Button
                android:id="@+id/saveSubTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TALLENNA ALITEHTÄVÄ"
                android:background="#4CAF50"/>


        </LinearLayout>
    </LinearLayout>resources></LinearLayout>